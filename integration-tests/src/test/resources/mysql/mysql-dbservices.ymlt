apiVersion: v1
kind: Secret
metadata:
  name: @DOMAIN_UID@-mysql-secret
  labels:
    weblogic.domainUID: @DOMAIN_UID@
data:
  # echo -n "root" | base64
  root-user: cm9vdA==
  # echo -n "root123" | base64
  root-password: cGFzc3dvcmQ=
---
apiVersion: v1
kind: Pod
metadata:
  labels:
    weblogic.domainUID: @DOMAIN_UID@
    app: @DOMAIN_UID@-mysql
  name: @DOMAIN_UID@-mysql
  namespace: @NAMESPACE@
spec:
  terminationGracePeriodSeconds: 5
  containers:
  - image: mysql:5.6
    name: mysql
    env:
    - name: MYSQL_ROOT_PASSWORD
      valueFrom:
        secretKeyRef:
          name: @DOMAIN_UID@-mysql-secret
          key: root-password
    ports:
    - containerPort: 3306
      name: mysql
---
apiVersion: v1
kind: Service
metadata:
  labels:
    weblogic.domainUID: @DOMAIN_UID@
  name: @DOMAIN_UID@-mysql
  namespace: @NAMESPACE@
spec:
  ports:
  - port: 3306
  selector:
    app: @DOMAIN_UID@-mysql
  clusterIP: None
