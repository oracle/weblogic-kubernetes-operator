apiVersion: batch/v1
kind: Job
metadata:
  labels:
    weblogic.createdByOperator: "true"
    weblogic.domainUID: ${DOMAIN_UID}
    weblogic.resourceVersion: domain-v2
  name: ${JOB_NAME}
  namespace: ${NAMESPACE}
spec:
  backoffLimit: 0
  template:
    metadata:
    spec:
      restartPolicy: Never
      activeDeadlineSeconds: 60
      containers:
      - command:
        - ${JOB_SCRIPT}
        env:
        - name: DOMAIN_UID
          value: "${DOMAIN_UID}"
        - name: JAVA_OPTIONS
          value: "-Djava.security.egd=file:/dev/./urandom "
        - name: USER_MEM_ARGS
          value: "-Xms64m -Xmx256m "
        image: "${WEBLOGIC_IMAGE_NAME}:${WEBLOGIC_IMAGE_TAG}"
        imagePullPolicy: ${WEBLOGIC_IMAGE_PULL_POLICY}
        name: weblogic-server
        volumeMounts:
        - name: weblogic-domain-cm-volume
          mountPath: /weblogic-operator/scripts
          readOnly: true
        - name: test-script-cm-volume
          mountPath: /test-scripts
          readOnly: true
        - mountPath: /pv-root
          name: pv-root-volume
      volumes:
      - name: weblogic-domain-cm-volume
        configMap:
          defaultMode: 365
          name: weblogic-domain-cm
      - name: test-script-cm-volume
        configMap:
          defaultMode: 365
          name: test-script-cm
      - name: pv-root-volume
        persistentVolumeClaim:
          claimName: ${DOMAIN_UID}-test-root-pvc
